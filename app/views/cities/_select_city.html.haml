%select#location_old_city_id.select.required{name: "location[city_id]"}
  %option{value: "0"}   Select City
  - c.each do|s|
    %option{value: "#{s.id}"}   #{s.name}
  %option{value: "0"}   Add New City  
    
:javascript
  $('#location_city_id').change(function(){
    var cunt_data = $(this).val()
    $.get("/cities/"+ cunt_data+ ".js", {}, function(data) {
      callback(data)
    }); 
  }); 
