= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :user_id, value: current_user.id
  = f.hidden_field :kind, value: "portfolio"
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :category_id
    = collection_select(:album, :category_id, Category.all, :id, :name)
  .field
    %span#state_label
      Upload Portfolio Cover Image       
      %span#upload_cover_mandatory
        *      
    %p
      = f.file_field :cover    
    
  .actions
    = f.submit 'Save', class:"btn btn btn-large btn-primary"
