<div class="inneContaineralbum">
  <div id="album-cont" class="wrapper">
    <div id="content-container">
      <div id="crop-project-main" class="left">
        <div id="project-header-main" class="work-header-main work-header">
          <h1 id="project-title">
            Crop <%= @album.kind %> cover picture
          </h1>
        </div>
        <div id="crop_img_area">
          <%= form_for(@album) do |f| %>
            <div class="landscape-crop-area">
              <% # Crop area. Mantains original image proportions. Crop area takes the aspect ratio %>
              <%= f.cropbox :cover, width: 1000 %>
            </div>
            <div class="clear"></div>
            <br />
            <div class="actions">
              <%= f.submit 'Crop picture', id:'album_crop_btn', class: 'btn btn-large btn-primary' %>
            </div>
          <% end %>
          </div>
        </div>        
        
      </div>
    </div>
  </div>
</div>
