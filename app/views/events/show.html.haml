.row-fluid.spaced-top
  .span2.spaced-left
    .btn-group.btn-group-vertical.btn-block
      = link_to 'Edit', edit_event_path(@event), class: 'btn btn-success'
      = link_to 'Back', current_user, class: 'btn'
  .span10.spaced-right
    %h1 Event

    %h3
      = @event.title
    %p
      = @event.description
    %p
      %b Start time:
      = @event.start
    %p
      %b End time:
      = @event.end
