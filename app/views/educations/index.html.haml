.row-fluid.spaced-top
  .span2.spaced-left
    .btn-group.btn-group-vertical.btn-block
      = link_to 'My profile', current_user, class: 'btn'
  - if current_user.educations.any?
    .span10.min500
      %h1 My Educations Details
      .feedback_listing
        %table.table.table-bordered
          %tr
            %th Institute
            %th Course
            %th Start
            %th End
            %th
            %th

          - current_user.educations.each do |education|
            %tr
              %td= education.institute_name
              %td= education.course_name
              %td= education.start_date
              %td= education.end_date
              %td= link_to 'Show', education
              %td= link_to 'Edit', edit_education_path(education)

        %br
  - else  
    .span10.min500
      %h1 Please add Education Details   

