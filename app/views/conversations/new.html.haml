.inneContaineralbum
  .wrapper
    %h1 Start Conversation
    //= render 'form'
    = simple_form_for :conversation, url: :conversations do |f|
      = f.input :recipients
      = f.input :subject
      = f.input :body
      .form-actions
        = f.button :submit, class: 'btn-primary'
        = submit_tag 'Cancel', type: :reset, class: 'btn btn-danger'
