= simple_form_for(@organization) do |f|
  = f.error_notification

  .form-inputs
    #org_name
      %label
        %b
          Organization Name
    = f.input :name,  :"data-limit"=> 200
    #org_name
      %label
        %b
          Area Of Work
    = collection_select(:organization, :category_id, Category.all, :id, :name)
    #aff_start_date
      %label
        %b
          Organization Start Date    
    .field.datepicker
      = text_field(:organization, :start_date)    

  .orgn_btn
    = f.button :submit, value:"Save Organization",  class: "btn btn-large btn-primary"
  .clear
  %br
