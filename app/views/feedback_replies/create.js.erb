$("#feedbacks_answer").append("<%= escape_javascript(render('feedbacks/feedback_replies', feedback: @feedback_reply)) %>").fadeIn('slow');

$("#feedback_status").html("<%= @feedback_reply.feedback.status %>")
$('#feedback_reply_message').val('');


$("#feedback_box-delete-<%= @feedback_reply.id %>").click(function(){
  var reply_id = <%= @feedback_reply.id %>
   var delreply = confirm("Do you want to delete this reply ?");
   if(delreply == true)
   {
     $("#feedback_box-"+reply_id).hide('slow');
     return true;
   }
   else
     {$("#feedback_box-"+reply_id).show();
     return false;}
});
 
