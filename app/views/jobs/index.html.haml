.row-fluid.spaced-top
  .span2.spaced-left
    .btn-group.btn-group-vertical.btn-block
      = link_to 'New job', new_job_path, class: 'btn btn-success'
      = link_to 'My profile', current_user, class: 'btn'
  .span9.min500
    %h1 My posted jobs
    - if current_user.jobs.any?
      - current_user.jobs.each do |job|
        = link_to 'Show', job
    - else
      %h3 You have not posted any job yet
      = link_to 'Post new job', new_job_path, class: 'btn btn-success btn-primary btn-large'
%table
  %tr
    %th User
    %th Organization
    %th Category
    %th Sub category
    %th Reference code
    %th Title
    %th Description
    %th Minimum experience
    %th Maximum experience
    %th Minimum salary
    %th Maximum salary
    %th Employment type
    %th Employment status
    %th Cover
    %th
    %th
    %th

  - @jobs.each do |job|
    %tr
      %td= job.user_id
      %td= job.organization_id
      %td= job.category_id
      %td= job.sub_category_id
      %td= job.reference_code
      %td= job.title
      %td= job.description
      %td= job.minimum_experience
      %td= job.maximum_experience
      %td= job.minimum_salary
      %td= job.maximum_salary
      %td= job.employment_type
      %td= job.employment_status
      %td= job.cover
      %td= link_to 'Show', job
      %td= link_to 'Edit', edit_job_path(job)
      %td= link_to 'Destroy', job, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Job', new_job_path
