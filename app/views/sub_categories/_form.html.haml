= form_for @sub_category do |f|
  - if @sub_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sub_category.errors.count, "error")} prohibited this sub_category from being saved:"
      %ul
        - @sub_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :category_id
    = collection_select(:sub_category, :category_id, Category.all, :id, :name)
  .field
    = f.label :sub_category_group_id
    = collection_select(:sub_category, :sub_category_group_id, SubCategoryGroup.all, :id, :name)
  .actions
    = f.submit 'Save'
