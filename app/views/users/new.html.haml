.wrapper
  %h1 Join Geniya

  .row
    = params[:q]
    .span6.offset3
      .field
      = simple_form_for @user do |f|
        = render 'shared/error_messages', object: f.object
        .field
          = f.label "Area of work"
          = f.association :category, collection: Category.order('name ASC'), include_blank: false
        .field
          = f.label "Profession"
          = render 'shared/sub_category_select', c: Category.order('name ASC').first
        .field
          = f.label :email
          = f.text_field :email
        .field
          = f.label :username
          = request.host + '/'
          = f.text_field :username, style: "width: 70%"
        .field
          = f.label :password
          = f.password_field :password
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation
        .field
          = f.hidden_field :plan, value: params[:q]  
        .actions
          = f.submit 'Create my account', class: "btn btn-large btn-primary"

  = link_to 'Back', users_path
