.wrapper

  .profile_form_editable
    %h1 Edit Profile
    .field
    = simple_form_for @user do |f|
      = render 'shared/error_messages', object: f.object
      /= render 'shared/sub_categories_select', form_object: f, category_id: @user.sub_categories.first.category.id
      .field
        = f.label "Area of work"
        = f.association :category, collection: Category.order('name ASC'), include_blank: false
      .field
        = f.label "Profession"
        = render 'shared/sub_category_select', c: Category.order('name ASC').first
      .field
        %label Email
        = f.text_field :email
      .field
        = f.label :name
        = f.text_field :name, placeholder: "Name"


      .field
        = f.label :password
        = f.password_field :password
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      .field
        = f.label :gender
        = radio_button_tag 'user[gender]', 'male'
        Male
        = radio_button_tag 'user[gender]', 'female'
        Female
      .field
        = f.label :summary
        = text_area_tag 'user[summary]', nil, size: "5x5", placeholder: "Tell Something about yourself.."
      .field.datepicker
        = f.label :birthdate
        = f.text_field :birthdate, placeholder: "Select Your Birthday"
      .field
        = f.label :available
        = f.select(:available, options_for_select([['Yes', 'yes'], ['No', 'no'], ['Probably', 'probably'], ['Busy', 'busy']]))         
      -if @user.sub_category.name == 'model'
        .field
          = f.label :height
          = f.number_field :height
        .field
          = f.label :bust
          = f.number_field :bust
        .field
          = f.label :hips
          = f.number_field :hips
        .field
          = f.label :shoes
          = f.number_field :shoes
        .field
          = f.label :hair
          = f.text_field :hair
        .field
          = f.label :eyes
          = f.text_field :eyes


      .actions
        = f.submit 'Save'
