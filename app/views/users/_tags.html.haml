#profile_tags_left
  %ul#tags-field
    - @i = 0
    - @user.tags.each_with_index do |tag, index|
      - if index%2 == 0
        %li[tag]
          - if(@i%2 == 0) 
            %span
              = link_to tag.name, tag
              - if !tag.id.nil? and current_user and @user.id == current_user.id
                = link_to "x", '/user_tags/' + UserTag.find_by(user_id: current_user.id, tag_id: tag.id).id.to_s, method: :delete, :data => { :confirm => 'Are you sure?' }, class: 'tag_delete', remote: true
          - else
            = link_to tag.name, tag
            - if !tag.id.nil? and current_user and @user.id == current_user.id
              = link_to "x", '/user_tags/' + UserTag.find_by(user_id: current_user.id, tag_id: tag.id).id.to_s, method: :delete, :data => { :confirm => 'Are you sure?' }, class: 'tag_delete', remote: true
          - @i += 1
