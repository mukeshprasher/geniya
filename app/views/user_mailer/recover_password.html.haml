:css
  #messagebody div.rcmBody {
  width: 100% !important;
  }
  #messagebody div.rcmBody .ReadMsgBody {
  width: 100%;
  }
  #messagebody div.rcmBody .ExternalClass {
  width: 100%;
  }
  #messagebody div.rcmBody {
  -webkit-text-size-adjust: none;
  }
  #messagebody div.rcmBody {
  margin: 0; padding: 0;
  }
  #messagebody div.rcmBody img {
  border: 0; height: auto; line-height: 100%; outline: none; text-decoration: none;
  }
  #messagebody div.rcmBody #backgroundTable {
  height: 100% !important; margin: 0; padding: 0; width: 100% !important;
  }
  #messagebody div.rcmBody {
  background-color: #FCFCFC;
  }
  #messagebody div.rcmBody #backgroundTable {
  background-color: #FCFCFC;
  }
  #messagebody div.rcmBody .preheaderContent div a:visited {
  color: #336699; font-weight: normal; text-decoration: underline;
  }
  #messagebody div.rcmBody .headerContent a:visited {
  color: #336699; font-weight: normal; text-decoration: underline;
  }
  #messagebody div.rcmBody .bodyContent div a:visited {
  color: #336699; font-weight: normal; text-decoration: underline;
  }
  #messagebody div.rcmBody .footerContent div a:visited {
  color: #336699; font-weight: normal; text-decoration: underline;
  }
