%div.child-comment-wrap{ :id => "child-comment-#{child.id}" }
  -if (current_user == child.user)
    = link_to "×", comment_path(child), :method => :delete, :remote => true, :confirm => "Are you sure you want to remove this comment?", :disable_with => "×", :class => 'child-comment-delete', :id => "child-comment-delete-#{child.id}"
  #child-comment-body
    = child.user.username
    = child.body
  #child-comment-info
    = child.updated_at
