-if signed_in?
  %div{class: "comment-form-#{comment.commentable_type}-#{comment.commentable_id}"}
    = simple_form_for comment, :remote => true do |f|
      = f.input :body, :label => false, class: "comment-text-area comment_body",style: "width: 70%", placeholder: "Add a comment", :input_html => { :class => 'comment_text_area smiley', :rows => '1', onkeyup: "javascript: open_smiley()" }
      = f.hidden_field :commentable_id, :value => comment.commentable_id
      = f.hidden_field :commentable_type, :value => comment.commentable_type
      = f.hidden_field :parent_id, :value => parent_id unless parent_id.nil?
      /= f.button :submit, :class => "btn btn-primary comment-submit-button", :disable_with => "Submittingâ€¦", id: "comment-box-btn"
      


