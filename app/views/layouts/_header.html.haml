%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "Geniya", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Register", signup_path
          - if signed_in?
            %li= link_to "Users", users_path
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", edit_user_path(current_user)
                - if signed_in? && current_user.plan == 'admin'
                  %li= link_to "Manage Categories", categories_path
                  %li= link_to "Manage Sub Categories", sub_categories_path
                %li.divider
                %li
                  = link_to "Sign out", signout_path, method: "delete"
          - else
            %li= link_to "Login", signin_path
    
  - if index
    %td= link_to "Home", root_path
    - @categories.each do |category|
      %td= link_to category.name, category
   
