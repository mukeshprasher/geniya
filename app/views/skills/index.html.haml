.row-fluid.spaced-top
  .span2.spaced-left
    .btn-group.btn-group-vertical.btn-block
      = link_to 'My profile', current_user, class: 'btn'
  .span10.min500
    %h1 Listing skills
    .feedback_listing
      %table.table.table-bordered
        %tr
          %th Name
          %th Operations

        - @skills.each do |skill|
          %tr
            %td= skill.name
            %td= link_to 'Show', skill
            %td= link_to 'Edit', edit_skill_path(skill)
            %td= link_to 'Destroy', skill, :method => :delete, :data => { :confirm => 'Are you sure?' }
      %br
      = will_paginate    

