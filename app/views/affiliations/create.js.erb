$('#affiliation_organization_id').val('');
<% if @affiliation.status == 'yes' %>
  $("#orgnz_detail").html("<%= escape_javascript(render('affiliations/current_company', {:affiliation => @affiliation})) %>");
<% else %>
  $("#prev_orgnz_detail").html("<%= escape_javascript(render('affiliations/previous_company', {:affiliation => @affiliation})) %>");
<% end %>
$('#affiliation_form_area_close').click()
$('#orgn_detail').hide();
$('#affilates_form_container').hide();
$("#aff_title_container").html(" change Affiliations");
$(".affiliation-delete").click(function(){
 var delcomment = confirm("Do you want to delete this Affiliation ?");
 if(delcomment == true)
 {
 var delete_comment_id=this.id.split("-")[2]
   $("#current_company-"+delete_comment_id).hide('slow');
   return true;
 }
 else
   {$("#current_company-"+delete_comment_id).show();
   return false;}
 });
