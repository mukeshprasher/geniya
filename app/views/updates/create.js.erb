<% if current_user.plan == "visitor" %>
$('#feed-text').val('');
$('#update_file_attachment').val('');
  
  <% elsif current_user.plan == "trial" %>
    <% if current_user.videos.count>=3 %>
      $('#feed-text').val('');
      $('#update_file_attachment').val('');
    <% else %>
      $(".updates").prepend("<%= escape_javascript render @activity %>")
      $('#feed-text').val('');
      $('#update_file_attachment').val('');
    <% end %>  


<% else %> 
$(".updates").prepend("<%= escape_javascript render @activity %>")
$('#feed-text').val('');
$('#update_file_attachment').val('');
<% end %>
