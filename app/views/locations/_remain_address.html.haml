%p.user_address{ :id => "current_address-#{@u.id}" }
  - if @u.street_address == ''
    %span
  - else
    %span  
      %a{href:"/locations/"+"#{@u.id}"}
        = @u.street_address
      ,
  %span
    %a{href:"/cities/"+"#{@u.city.id}"}
      = @u.city.name
    ,
  %span
    %a{href:"/states/"+"#{@u.city.state.id}"}
      = @u.city.state.name
    ,
  %span
    %a{href:"/countries/"+"#{@u.city.state.country.id}"}
      = @u.city.state.country.name   
