<% if @chat.errors.any? %>
  alert('Error sending message')
<% else %>
  $('#chat_message').val('')
  $("#chat_show_table").append("<%= escape_javascript(render('shared/chat_message', chat: @chat)) %>")
  var objDiv = document.getElementById("chat_modal_body");
  objDiv.scrollTop = objDiv.scrollHeight;

<% end %>
