<% if @chat.errors.any? %>
  alert('Error sending message')
<% else %>
  $('#chat_message').val('')
  <% @chats.each do |chat| %>
    $("#chat_show_table_<%= @reciever_id %>").append("<%= escape_javascript(render('shared/chat_message', chat: chat)) %>")
  <% end %>
 
  $('#last_msg_id_<%= @reciever_id %>').val('<%= @last_msg_id %>') 
  var objDiv = document.getElementById("chat_modal_body");
  objDiv.scrollTop = objDiv.scrollHeight;

<% end %>
