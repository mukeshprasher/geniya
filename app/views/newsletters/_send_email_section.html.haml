%p
  %b Status:
  = @newsletter.status

- if @newsletter.status == 'pending'
  = simple_form_for @newsletter, :url => {:action => "send_email"}, method: 'post', remote: true do |f|
    = hidden_field_tag 'newsletter[url]', request.original_url
    = f.submit 'Send newsletter', class: 'btn btn-primary btn-large', id: 'send_newsletter_button'
